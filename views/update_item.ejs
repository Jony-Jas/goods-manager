
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Items</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Item</h2>
            <span class="text-dark">Use the below form to Update an Item</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
         <form method="POST" id="update_item">
            <div class="add_item">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="hidden" name="id" value="<%= item._id %>">
                    <input type="text" name="name"  value="<%=item.name%>">
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" name="quantity" value="<%=item.quantity%>">
                </div>
                
                <div class="form-group">
                    <label for="availability" class="text-dark">Availabilty</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="availability" value="Available" <%= item.availability == 'Available'?'checked':'' %> >
                        <label for="radio-2" class="radio-label">Available</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="availability" value="Not Available" <%= item.availability == 'Not Available'?'checked':'' %> >
                        <label for="radio-3" class="radio-label">Not Available</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="update">Save</button>
                </div>
            </div>
        </form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->